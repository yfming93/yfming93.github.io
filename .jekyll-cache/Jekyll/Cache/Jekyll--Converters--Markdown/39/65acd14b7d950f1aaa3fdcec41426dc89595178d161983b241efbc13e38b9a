      res.writeHead(200,{
        'Content-Type':'text/html'
      });
      res.write(data.toString());
    };
    res.end();
  })
}).listen(3000,'127.0.0.1',()=&gt;{
  console.log("æœåŠ¡å™¨å·²ç»è¿è¡Œï¼Œè¯·åœ¨æµè§ˆå™¨æ‰“å¼€ï¼šhttp://127.0.0.1:3000/index.html æ¥è¿›è¡Œè®¿é—®");
